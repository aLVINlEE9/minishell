#include "../includes/minishell.h"

int		ft_is_digit(char *cmd)
{
	while (*cmd)
	{
		if (*cmd < '0' || *cmd > '9')
			return (0);
		cmd ++;
	}
	return (1);
}
void	built_cd(char **cmd)
{
	int		result;
	char	*home;

	home = getenv("HOME");
	if (cmd[1] == 0)
		result = chdir(home);
	else
		result = chdir(cmd[1]);
	if (!result)
		printf("cd is working\n");
	else
		printf("cd: %s: No such file or directory\n", cmd[1]);
}
